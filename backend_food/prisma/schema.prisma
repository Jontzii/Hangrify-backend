generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meal {
  id          String      @id @default(uuid()) @db.Uuid
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userId      String      @db.Uuid
  user        User        @relation(name: "UserMeals", fields: [userId], references: [id])
  title       String      @db.VarChar(255)
  content     String?     @db.VarChar
  day         DateTime
  recipeId    String      @db.Uuid
  recipe      Recipe      @relation(name: "RecipeMeals", fields: [recipeId], references: [id])
}

model Recipe {
  id              String      @id @default(uuid()) @db.Uuid
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  userId          String      @db.Uuid
  user            User        @relation(name: "UserRecipes", fields: [userId], references: [id])
  title           String      @db.VarChar(255)
  content         String?     @db.VarChar
  recipematerial  Json
  guide           String?     @db.VarChar
  meals           Meal[]      @relation(name: "RecipeMeals")
  favorite        Boolean     @default(false)
  timesEaten      Int         @default(0)
}

model Statistics {
  id              String      @id @default(uuid()) @db.Uuid
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  userId          String      @unique @db.Uuid
  user            User        @relation(name: "UserStatistics", fields: [userId], references: [id])
  lastLogin       DateTime
  recipesCreated  Int
}

model User {
  id              String        @id @db.Uuid
  name            String
  email           String        @unique
  emailVerified   Boolean       @default(false)
  meals           Meal[]        @relation(name: "UserMeals")
  recipes         Recipe[]      @relation(name: "UserRecipes")
  statistics      Statistics?   @relation(name: "UserStatistics")
}
